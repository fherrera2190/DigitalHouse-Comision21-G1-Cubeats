<!-- Header -->
<header class="header">
  <div class="header-container">
    <div class="header-top">
      <div class="header-top-left">
        <div class="burger-menu">
          <a class="burger-menu__link" href=""><i class="fas fa-bars burger-menu__i"></i></a>
        </div>
      </div>
      <div class="header__logo">
        <a href="/"><img class="logo__img" src="/img/logotransparente.png" alt="Logo">
          <span>CuBeats</span>
        </a>
        <div class="desktop-search">
          <form action="/products/search" method="GET" class="header-search">
            <input name="keywords" class="header-search__input" type="text" placeholder="¿Qué Estás Buscando?">
            <button type="submit" class="header-search__button"><i class="fa-solid fa-magnifying-glass"></i></button>
          </form>
        </div>
      </div>
      <div class="header-top-right">
        <% if (locals.userLogged) { %>
        <a class="header-top-right__mobileButton" href="/users/profile"><%= locals.userLogged.username %></a>
        <nav class="header-nav-menu">
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/products">All Beats</a></li>
            <li class="itemlist__li"><a href="/admin">Admin Panel</a></li>
          </ul>
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/users/register"><%= locals.userLogged.username %></a></li>
            <li class="itemlist__li"><a href="/users/logout">Logout</a></li>
          </ul>
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
            </li>
          </ul>
        </nav>
        <% }else{ %>
        <a class="header-top-right__mobileButton" href="/users/register">SIGN UP</a>
        <nav class="header-nav-menu">
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/products">All Beats</a></li>
            <li class="itemlist__li"><a href="/admin">Admin Panel</a></li>
          </ul>
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/users/register">Sign up</a></li>
            <li class="itemlist__li"><a href="/users/login"> Sign in</a></li>
          </ul>
          <ul class="header-nav-menu__itemlist">
            <li class="itemlist__li"><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
            </li>
          </ul>
        </nav>
        <% } %>
      </div>
    </div>
    <div class="header-bottom">
      <form action="/products/search" method="GET" class="header-search">
        <input name="keywords" class="header-search__input" type="text" placeholder="¿Qué Estás Buscando?">
        <button type="submit" class="header-search__button"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>
  </div>
</header>